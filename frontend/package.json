{
  "name": "eshop-frontend",
  "version": "1.0.0",
  "description": "Vanilla JS frontend for E-Shop project",
  "type": "module",
  "scripts": {
    "dev": "parcel index.html --port 5173",
    "build": "parcel build index.html --dist-dir dist --public-url ./",
    "clean": "rimraf .parcel-cache dist",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "lint": "eslint ./src --ext .js && stylelint \"**/*.css\""
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ]
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^24.0.0",
    "parcel": "^2.12.0",
    "rimraf": "^6.0.1"
  }
}
